<Window x:Class="Admin_Panel.TransactionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выполненные операции" Height="900" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#FF1E1E1E" Foreground="White">

    <Grid Margin="20">
        <StackPanel Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Stretch">
            
            <StackPanel.Resources>
                <!-- Стиль для текста в ячейках -->
                <Style TargetType="DataGridCell">
                    <Setter Property="Foreground" Value="Black"/>
                </Style>

                <!-- Стиль для заголовков таблицы -->
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Foreground" Value="Black"/>
                </Style>
            </StackPanel.Resources>

            <TextBlock Text="Выполненные операции" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
            
            

            <!-- Таблица операций -->
            <DataGrid x:Name="OperationsGrid" AutoGenerateColumns="True" Height="200" Margin="0,0,0,20"
                      Background="#FF2E2E2E" Foreground="White"/>

            <!-- Остаток средств на счетах -->
            <TextBlock Text="Остаток средств на счетах:" FontSize="18" FontWeight="Bold" Margin="0,20,0,5"/>
            <DataGrid x:Name="BalanceGrid" AutoGenerateColumns="True" Height="100"
                      Background="#FF2E2E2E" Foreground="White"/>

            <!-- Счета с наибольшим числом транзакций -->
            <TextBlock Text="Счета с наибольшим количеством транзакций:" FontSize="18" FontWeight="Bold" Margin="0,20,0,5"/>
            <DataGrid x:Name="TopAccountsGrid" AutoGenerateColumns="True" Height="100"
                      Background="#FF2E2E2E" Foreground="White"/>

            <!-- Общий оборот за месяц -->
            <TextBlock Text="Общий оборот средств за месяц:" FontSize="18" FontWeight="Bold" Margin="0,20,0,5"/>
            <TextBlock x:Name="TotalTurnoverText" FontSize="16"/>

            <!-- Закрыть -->
            <Button Content="Закрыть" Click="CloseButton_Click" Margin="0,20,0,0"
                    Background="#FFB71C1C" Foreground="White" Padding="10,5"/>
        </StackPanel>
    </Grid>
</Window>
